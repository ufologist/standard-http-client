{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "outDir": "dist",
    "rootDir": "./src",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
